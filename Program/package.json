{
  "name": "calculator-app",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --testResultsProcessor jest-junit",
    "sonar": "sonar-scanner"
  },
  "dependencies": {
    "express": "^4.18.2",
    "body-parser": "^1.20.2",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "jest-junit": "^16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "coverageReporters": ["text", "lcov", "html", "json"],
    "collectCoverageFrom": [
      "index.js"
    ],
    "testResultsProcessor": "jest-junit"
  },
  "jest-junit": {
    "outputDirectory": "coverage",
    "outputName": "junit.xml"
  }
}